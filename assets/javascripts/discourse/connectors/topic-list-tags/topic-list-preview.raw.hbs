{{#unless context.site.mobileView}}
  {{#if context.showThumbnail}}
    <div class="topic-thumbnail">
      <a href='{{context.topic.url}}'>
        {{preview-unbound context.thumbnails}}
      </a>
    </div>
  {{/if}}
  {{#if context.socialMediaStyle}}
    <div class='topic-intro'>
      <div class="topic-poster-avatars inline">
        {{#each context.topic.posters as |poster|}}
          <a href="{{poster.user.path}}" data-user-card="{{poster.user.username}}" class="{{poster.extras}}">
            {{avatar poster avatarTemplatePath="user.avatar_template" usernamePath="user.username" imageSize="large"}}
          </a>
        {{/each}}
      </div>
      <div class="topic-intro-details inline">
        <div>
          <div class="topic-poster-names inline">
            {{{context.posterNames}}}
          </div>
          <div class='topic-category inline'>
            {{category-link context.topic.category}}
          </div>
        </div>
        <div>
          <div class="topic-views {{context.topic.viewsHeat}} inline sub">
            {{number context.topic.views numberKey="views_long"}}
            {{i18n 'views_lowercase' count=context.topic.views}}
          </div>
          <span class="middot inline sub"></span>
          <div class='topic-replies posts-map {{context.view.likesHeat}} inline sub' title='{{context.view.title}}'>
            <a href class='posts-map badge-posts {{context.view.likesHeat}}'>{{number context.topic.replyCount}}</a>
            {{i18n 'replies_lowercase' count=context.topic.replyCount}}
          </div>
          <span class="middot inline sub"></span>
          <div class="{{class}} {{cold-age-class context.topic.createdAt startDate=context.topic.bumpedAt class=""}} activity inline sub" title="{{{context.topic.bumpedAtTitle}}}">
            <a href="{{context.topic.lastPostUrl}}">{{format-date context.topic.bumpedAt format="medium-with-ago" noTitle="true"}}</a>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    {{#if context.showCategoryBadge}}
      <div class='topic-category'>
        {{category-link context.topic.category}}
      </div>
    {{/if}}
  {{/if}}
  {{#if context.showActions}}
    <div class="topic-actions">
      {{#if context.likeCountDisplay}}
        <div class="like-count">{{context.likeCountDisplay}}</div>
      {{/if}}
      {{#each context.topicActions as |action|}}
        {{list-button action}}
      {{/each}}
    </div>
  {{/if}}
{{/unless}}
